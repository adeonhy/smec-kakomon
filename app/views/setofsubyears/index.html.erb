    <div class="row">
        <div class="span8">
            <h2>科目・年度から選ぶ</h2>
            <table class="table table-striped">
                <thead>
                    <tr><th>科目</th><th>年度</th></tr>
                </thead>
                <tbody>
                    <tr><td>経済学・経済政策</td><td>
                            <% @setofsubyears.select {|i| i.subject == "経済学・経済政策"}.each do |set| %>
