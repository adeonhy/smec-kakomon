                    </td></tr>
                    <tr><td>経営法務</td><td>
                            <% @setofsubyears.select {|i| i.subject == "経営法務"}.each do |set| %>
                                <% if set.available %>
                                    <%= link_to set.year, "/#{set.year}" %>
                                <% else %>
                                    <%= set.year %> 
                                <% end %>
                            <% end %>
